#include <stdio.h>

void classifica_trasacoes ()
{
    int qtd_normais=0, qtd_suspeitas=0, qtd_bloqueada
    float valor, soma=0 
    printf("")
    scanf ("%f", &valor);
    quantidade++;
    soma +=valor;
    while (qtd_bloqueada == 0)
    {
        scanf ("%f", valor);
        if (valor < (soma/qtd_normais)*1.5)
        {
            soma += valor;
            qtd_normais++
        }
        else if (valor < (soma/qtd_normais)*2.0)
        {
            qtd_suspeitas++
        }
        else
        {
            qtd_bloqueada++
        }
    }
    
    printf ("%f, %d, %d", (soma/qtd_normais), qtd_normais, qtd_suspeitas);
}


