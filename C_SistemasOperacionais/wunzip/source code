#include <stdio.h>
#include <stdlib.h>

int main (int argc, char * argv[])
{
    if (argc < 2) {
        printf ("wunzip: file1 [file2 ...]\n");
        return 1;
    }

    FILE * arquivo;
    int contador;
    char c;

    for (int i = 1 ; i < argc ; i++) {
        arquivo = fopen (argv[i], "r");
        if (arquivo == NULL) {
            printf("wzip: cannot open file\n");
            return 1;
        }

        while((fread(&contador, sizeof(int), 1, arquivo)) != 0) {
            fread(&c, sizeof(char), 1, arquivo);
            
            for(int j = 0 ; j < contador ; j++) {
                putchar (c);
            }
        }
        
        fclose(arquivo);
    }

    return 0;
}