#include <stdio.h>
#include <string.h>
#include <stdlib.h>
#include <unistd.h>
#include <fcntl.h>
#include <sys/wait.h>

char *paths[100]={"/bin/","/usr/bin/"};
int nOfPathes =2;
char * arrayOfTokens[100];
int indx =0 ; // para o numero de tokens
int childsPid[100];
int nOfChilds = 0 ;

void getTokens(FILE *entrada);
void execComand ();
int comadosInternos ();
int redirecionamento ();
int comandosParalelos ();
void error ();

int main (int argc, char * argv[])
{
    FILE *entrada = stdin; // por padrão, lê do teclado

    if (argc == 1) { //interactive mode
        getTokens (stdin);
    }
    else if (argc == 2) {
        entrada = fopen(argv[1], "r");
        if (entrada == NULL) {
            error();
            exit(1);
        }
        // modo batch (lendo do arquivo)
        getTokens(entrada);
        fclose(entrada);
    } 
    else {
        // argumentos demais → erro
        error();
        exit(1);
    }

    return 0;
}

void getTokens (FILE *entrada)
{
    char * linha = NULL;
    size_t tamanho = 0;
    char * token;

    while (1) {
        if (entrada == stdin) {
            printf ("wish> ");
        }
        
        if (getline(&linha, &tamanho, entrada) == -1) {
            break;  // Sai do loop se der erro ou EOF
        }

        char * resto = linha;
        int i = 0;

        while ((token = strsep(&resto, " \t\n")) != NULL) {
            if (*token == '\0') continue;  // ignora tokens vazios
            arrayOfTokens[i] = token;
            i++;
        }
        arrayOfTokens[i] = NULL; // termina array com NULL

        if (comandosInternos()) {
            continue;  // comando tratado internamente
        }
        else if (comandosParalelos ()) {
            continue; // comando tratado na função "comandosParalelos"
        }
        else {
            execComand (); // comando não interno
        }
    }
    free (linha);
}

void execComand () 
{
    //criacao de novo processo;
    pid_t pid = fork();

    char caminhoCompleto[1024];
    if (pid == 0) { //processo filho
        int resultado = redirecionamento (arrayOfTokens);
        if (resultado == -1) {
            error();
            exit (1);
        }

        for (int i = 0 ; i < nOfPathes ; i ++) {
            snprintf(caminhoCompleto, sizeof(caminhoCompleto), "%s%s", paths[i], arrayOfTokens[0]);
            execv (caminhoCompleto, arrayOfTokens);
        }
        error();
        exit(1);
    } 
    else if (pid > 0) { //processo pai
        wait(NULL);
    }
    else {
        error();
        exit(1);
    }
}

int comadosInternos () //retorna 1 para comando interno e 0 para comando externo
{
    if (strcmp(arrayOfTokens[0], "exit") == 0) {
        if (arrayOfTokens[1] != NULL) {
            error();
        }
        else {
            exit(0);
        }
        return 1;// é comando interno
    }

    if (strcmp (arrayOfTokens[0], "cd") == 0) {
        if (arrayOfTokens[1] == NULL || arrayOfTokens[2] != NULL) {
            error();
        }
        else if (chdir(arrayOfTokens[1]) != 0) { //chdir é a função que muda diretótios (ela retorna 0 se bem sucedida e -1 se falhar)
            error();
        }
        return 1; // é comando interno
    }

    if (strcmp (arrayOfTokens[0], "path") == 0) {
        nOfPathes = 0;
        for (int i = 1 ; arrayOfTokens[i] != NULL ; i++) {
            paths[nOfPathes] = arrayOfTokens[i];
            nOfPathes++;
        }
        return 1;
    }

    return 0; // não é comando interno
}

int redirecionamento () // retorna 1 caso o redirecionamento bem sucedido, 0 caso não haja redirecionamento e -1 para falha (malformado, etc)
{
    int i, contador = 0, posRed = -1; //posRed é a posição onde ">" se encontra

    for (int i = 0 ; arrayOfTokens[i] != NULL ; i++) {
        if (strcmp(arrayOfTokens[i], ">") == 0) {
            contador++;
            if (contador > 1) {
                return -1;
            }
            posRed = i;
        }
    }

    if (posRed == -1) return 0; // não há redirecionamento caso posRed não mude seu valor inicial

    if (arrayOfTokens[posRed + 1] == NULL || arrayOfTokens[posRed + 2] != NULL) {
        return -1; //sem arquivos para redirecionar ou mais de um arquivos para redirecionar
    }
    
    int arquivo = open(arrayOfTokens[posRed + 1], O_WRONLY | O_CREAT | O_TRUNC, S_IRWXU);
    if (arquivo < 0) {
        return -1;  // erro ao abrir o arquivo
    }
    dup2(arquivo, STDOUT_FILENO); //dup2 faz com que tudo que seja escrito no stdout vá para o arquivo
    close (arquivo);

    arrayOfTokens[posRed] = NULL; // tira ">" e o nome do arquivo do array fazendo com que o final seja a antiga posição de ">"
    arrayOfTokens[posRed + 1] = NULL; // só por segurança

    return 1;
}

int comandosParalelos() // retorna 1 caso haja comandos paralelos
{
    int inicio = 0;
    int i;
    int houveParalelo = 0;

    for (i = 0; arrayOfTokens[i] != NULL; i++) {
        if (strcmp(arrayOfTokens[i], "&") == 0) {
            houveParalelo = 1;
            arrayOfTokens[i] = NULL; // separa o comando aqui

            pid_t pid = fork();
            if (pid == 0) { // processo filho
                if (comadosInternos()) {
                    exit(0);
                }

                int r = redirecionamento();
                if (r == -1) {
                    error();
                    exit(1);
                }

                char caminhoCompleto[1024];
                for (int j = 0; j < nOfPathes; j++) {
                    snprintf(caminhoCompleto, sizeof(caminhoCompleto), "%s%s", paths[j], arrayOfTokens[inicio]);
                    execv(caminhoCompleto, &arrayOfTokens[inicio]);
                }

                error();
                exit(1);
            }
            else if (pid < 0) {
                error();
                return -1;
            }

            inicio = i + 1; // próximo comando começa depois do &
        }
    }

    // Depois do último &, pode ter mais um comando
    if (houveParalelo && arrayOfTokens[inicio] != NULL) {
        pid_t pid = fork();
        if (pid == 0) {
            if (comadosInternos()) {
                exit(0);
            }

            int r = redirecionamento();
            if (r == -1) {
                error();
                exit(1);
            }

            char caminhoCompleto[1024];
            for (int j = 0; j < nOfPathes; j++) {
                snprintf(caminhoCompleto, sizeof(caminhoCompleto), "%s%s", paths[j], arrayOfTokens[inicio]);
                execv(caminhoCompleto, &arrayOfTokens[inicio]);
            }

            error();
            exit(1);
        }
        else if (pid < 0) {
            error();
            return -1;
        }
    }

    if (houveParalelo) {
        while (wait(NULL) > 0); // espera todos os processos filhos
        return 1;
    }

    return 0;
}

void error()
{
	char error_message[30] = "An error has occurred\n";
	write(STDERR_FILENO, error_message, strlen(error_message));
}